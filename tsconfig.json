{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@graphql/*": [
        "./graphql/*"
      ],
      "types/*": [
        "./@types/*"
      ]
    },
    "downlevelIteration": true,
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "rootDir": ".",
    "outDir": "build",
    "strict": false,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "typeRoots": ["./node_modules/@types","./@types/types.d.ts"]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./*.js",
    "**/*.svg",
  ],
  "exclude": [
    "node_modules",
    "content/code-blocks/**/*",
  ]
}
